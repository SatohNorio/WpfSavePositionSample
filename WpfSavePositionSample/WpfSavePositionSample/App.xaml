             xmlns:local="clr-namespace:WpfSavePositionSample"
             xmlns:prop="clr-namespace:WpfSavePositionSample.Properties" StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--  シングルトンをリソースとして使用  -->
        <x:StaticExtension x:Key="FSetting" Member="local:Setting.Instance" />
        <prop:Settings x:Key="sett" />
        <local:DoubleToDataGridLengthConverter x:Key="DataGridLengthConverter" />
    </Application.Resources>
</Application>
